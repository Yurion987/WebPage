@using daco3.Models;
@using PagedList;
@using PagedList.Mvc;
@using System.Linq;
@{
    ViewBag.Title = "ZaznamOpravy";
    Layout = "~/Views/Shared/MojBlbyLayout.cshtml";
    var grid = new WebGrid(canPage: true, rowsPerPage: 15);
    grid.Bind(source: Model, rowCount: ViewBag.TotalRow, autoSortAndPage: false);
}
<link href="~/Content/jquery-ui-timepicker-addon.min.css" rel="stylesheet" />
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />

@model IPagedList<GridTabulka>


<style>
    #table {
        margin-top: 100px;
    }
</style>


<body>

    <div id="table">
        @using (Html.BeginForm("ZaznamOpravy","Home")) {
        <div class="col-md-10">
            @Html.Label("Meno")
            @Html.TextBox("userName", null, new { htmlAttributes = new { @class = "form-control" } })
            <input type="submit" value="Search" />

        </div>
        }
        @grid.GetHtml(
                                           tableStyle: "table table-responsive table-bordered table-hover",
                                           columns: grid.Columns(
                                                    grid.Column(columnName: "Meno", header: "Meno"),
                                                    grid.Column(columnName: "Datum", header: "Datum"),
                                                    grid.Column(header: "Podrobne", format: (item) => Html.ActionLink("⇨", "ZaznamPodrobne", "Home", new { id = item.ZaznamId }, null))
                                                                  )

                                                   )

    </div>
    <div class="row">
        <div class="col-sm-6">
            @Html.PagedListPager(Model, page => Url.Action("ZaznamOpravy", new { page }))
        </div>

    </div>
</body>

@section scripts{
   
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
   
    <script>


        $(document).ready(function () {
          
            //autocompelte
            $('#userName').autocomplete({
                source: '/Home/CompleteName'
            });


        });
    </script>
}