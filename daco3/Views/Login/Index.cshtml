@using daco3.Models

@{
    Layout = null;
}
@model LoginClass


<div id="hiden" style="display:none">

    <div class="container">
        <div class="big-container">
            <img class="text" src="~/icons/text.svg" />
            <div class="middle-container" style="display:block">
                @using (Html.BeginForm("Login", "Login"))
                {
                    <h2>Prihlásenie</h2>
                    <img class="logo" src="~/icons/logo.png" />

                    <div class="login">
                        @Html.TextBoxFor(l => l.Meno, htmlAttributes: new { placeholder = "Meno" })
                    </div>
                    <div class="password">
                        @Html.PasswordFor(m => m.Heslo, htmlAttributes: new { placeholder = "Heslo" })
                    </div>

                    <div>
                        <input type="submit" value="Prihlásiť" />
                        <p id="erorText" style="color:red;border:1px solid black;width:50%;margin-left:25%;background-color:antiquewhite;border-radius:25px">@ViewBag.Err</p>
                    </div>

                }
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.0.0.min.js"></script>
<script src="~/Scripts/jquery-3.0.0.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script>
    $(document).ready(function () {
        $('#hiden').show();
       
        if ($('#erorText').text() == "") {
           
            $('#erorText').css("display", "none");
        } else {
            $('#erorText').css("display", "block");
        }
    });


</script>

<style>

    .big-container {
        margin-top: 5%;
        margin-left: 20%;
        width: 60%;
        display: flex;
        align-items: center;
        flex-direction: column;
    }

    h2 {
        margin-top: 50px;
        margin-bottom: 30px;
        font-family: "Times New Roman";
    }

    .middle-container {
        width: 45%;
        display: block;
        background: linear-gradient(to bottom, rgba(241,231,103,1) 0%, rgba(251,185,0,1) 51%, rgba(251,185,0,1) 100%);
        text-align: center;
        display: flex;
        flex-direction: column;
        border-radius: 25px;
        box-shadow: 0 10px 16px 0 rgba(0,0,0,0.4),0 6px 20px 0 rgba(0,0,0,0.19);
    }

    .logo {
        width: 45%;
        margin-bottom: 20px;
    }

    input {
        margin-bottom: 20px;
        width: 80%;
        border-radius: 25px;
        padding: 0px 15px;
        box-shadow: 0 10px 16px 0 rgba(0,0,0,0.4),0 6px 20px 0 rgba(0,0,0,0.19);
    }

        input[type=submit] {
            margin-bottom: 15%;
            background-color: black;
            color: white;
            border: 0px;
            padding: 5px;
        }

    body {
        background-image: url("../../icons/dark.jpg");
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>